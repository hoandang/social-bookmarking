<% provide(:title, 'Signup') %>
<div class="row">
  <div class="form">
    <h1>Sign up</h1>
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email%>
      <%= f.text_field :email%>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confimation" %>
      <%= f.password_field :password_confirmation %>
      <br/>
      <%= f.submit "Create Account", class: "btn btn-large btn-inverse" %> 
    <% end %>
  </div>
</div>
